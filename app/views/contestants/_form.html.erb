<div class="login_edit">

<%= form_for([@pageant, @contestant], :html => {class: "form-signin", multipart: true, role: "form"}) do |f| %>


  <div class="field">
    <%= f.label :con_num, 'con_num', class: 'sr-only' %>
    <%= f.number_field :con_num, autofocus: true, class: 'form-control', placeholder: 'Number' %>
  </div>
  <br>
  <div class="field">
    <%= f.label :name, 'name', class: 'sr-only' %>
    <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Name' %>
  </div>
  <br>
  <div class="field">
    <%= f.label :profile, 'profile', class: 'sr-only' %>
    <%= f.text_area :profile, rows: 5, autofocus: true, class: 'form-control', placeholder: 'Profile' %>
  </div>
  <br>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png', class: "btn btn-primary btn-sm" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit class: "btn btn-primary btn-md" %>
  </div>
<% end %>
</div>
